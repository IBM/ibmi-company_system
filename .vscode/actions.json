[
  {
    "name": "Compile with CRTBNDRPG ðŸ”¨",
    "command": "CRTBNDRPG PGM(&CURLIB/&NAME) SRCSTMF('&RELATIVEPATH') OPTION(*EVENTF) DBGVIEW(*SOURCE) TGTRLS(*CURRENT) TGTCCSID(*JOB)",
    "environment": "ile",
    "deployFirst": true,
    "extensions": [
      "RPGLE"
    ]
  },
  {
    "name": "Call program",
    "command": "CALL &CURLIB/&NAME",
    "environment": "ile",
    "deployFirst": true,
    "extensions": [
      "RPGLE"
    ]
  },
  {
    "name": "Build and deploy with make ðŸ”¨",
    "command": "/QOpenSys/pkgs/bin/gmake BIN_LIB=&CURLIB OPT=*EVENTF",
    "environment": "pase",
    "deployFirst": true,
    "extensions": [
      "GLOBAL"
    ]
  },
  {
    "name": "Build and deploy current with make ðŸ”¨",
    "command": "/QOpenSys/pkgs/bin/gmake &BASENAME BIN_LIB=&CURLIB OPT=*EVENTF",
    "environment": "pase",
    "deployFirst": true,
    "extensions": [
      "GLOBAL"
    ]
  },
  {
    "name": "Build and deploy with bob ðŸ”¨",
    "command": "/QOpenSys/pkgs/bin/makei build",
    "environment": "pase",
    "deployFirst": true,
    "extensions": [
      "GLOBAL"
    ],
    "postDownload": [
      ".logs/joblog.json",
      ".logs/output.log"
    ]
  },
  {
    "name": "Rmake ðŸ”¨",
    "command": "rmake -bf make && /QOpenSys/pkgs/bin/gmake BIN_LIB=&CURLIB OPT=*EVENTF",
    "environment": "pase",
    "deployFirst": true,
    "extensions": [
      "GLOBAL"
    ]
  }
]